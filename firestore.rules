rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any public data, but can only write to their own documents.
    match /users/{uid}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Anyone can sign up for the waitlist. No one can read or delete entries.
    match /waitlist/{doc} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Anyone can read stats, but only the server (via webhooks) can write them.
    match /stats/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // Any signed-in user can create a domain request. No one can read or alter them.
    match /domainRequests/{doc} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}

